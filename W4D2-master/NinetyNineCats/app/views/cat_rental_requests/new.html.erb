
<h1> Rental Request Form </h1>

<form action="<%= cat_rental_requests_url %>" method="post">

  <label for="rental_request"> Pick a cat </label>
  <select id="rental_request" name="rental_request[cat_id]">
    <option disabled selected> --select a name-- </option>
    <% @cats.each do |cat| %>
      <option value="<%=cat.id%>"> <%=cat.name%> </option>
    <% end %>
  </select>

  <br><br>

  <label for="start_date"> Start Date: </label>
  <input id="start_date" type="date" name="rental_request[start_date]">
  <br>

  <label for="end_date"> End Date: </label>
  <input id="end_date" type="date" name="rental_request[end_date]">
  <br><br>

  <input type="submit"  value="Rent this cat!">

</form>
