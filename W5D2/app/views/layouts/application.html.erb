<!DOCTYPE html>
<html>
  <head>
    <title>Reddit</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <header>
    <% if logged_in? %>
      <%= "Welcome #{current_user.username}!" %>
      <%= button_to "Home", root_url, method: :get %>
      <%= button_to "Edit Profile", edit_user_url(current_user), method: :get %>
      <%= button_to "Sign Out", session_url, method: :delete %>
    <% else %>
      <%= button_to "Sign In", new_session_url, method: :get %>
      <%= button_to "Sign Up", new_user_url, method: :get %>
    <% end %>
    <br>
  </header>

  <body>

    <% flash[:errors].try(:each) do |error| %>
      <%= error %>
    <% end %>

    <%= yield %>
  </body>

  <footer>
    <br><br>
    Â® Copyright by TV
  </footer>
</html>
